@model Guid?

<div class="row">
    <div class="col-sm-4">
        <h4>Company staff</h4>
        <div class="staff-content"></div>
    </div>
    <div class="col-sm-8">
        <h4>Personal information</h4>
        <div class="no-info">Please, select a card to see personal information...</div>
        <div class="staff-info" style="display: none;">
            <div class="staff-name"></div>
            <div class="staff-position"></div>
            <div class="staff-details"></div>
        </div>
    </div>
</div>
<script type="text/javascript">
    (function ($) {
        PageManager.RegisterPage(new $.Staff.Page());
    }(jQuery));
</script>

<script id="template-staff-view-details" type="text/x-handlebars-template">
    <div class="row">
        <div class="col-md-3">
            {{title}}
        </div>
        <div class="col-md-9">
            <ol class="input-group">
                {{#each values}}
                    <li class="staff-view-detail"><i class="fa {{../icon}}" title="{{../title}}"></i>{{this}}</li>
                {{/each}}
            </ol>
        </div>
    </div>
</script>
